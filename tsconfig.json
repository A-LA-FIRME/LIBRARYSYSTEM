{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "lib": ["ES2017", "DOM"],
        "outDir": "./static/js/",
        "rootDir": "./static/js/",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "exactOptionalPropertyTypes": false
    },
    "include": [
        "static/js/*.ts"
    ],
    "exclude": [
        "node_modules",
        "static/js/*.js"
    ]
}
